{
  "manifest_version": 3,
  "name": "My Screenshot Extension",
  "version": "1.0",
  "description": "Capture a screenshot when specific text appears.",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}