{
  "manifest_version": 3,
  "name": "My Screenshot Extension",
  "version": "1.0",
  "description": "Capture a screenshot when specific text appears.",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "service_worker": "combined_script.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "combined_script.js"
      ]
    }
  ]
}